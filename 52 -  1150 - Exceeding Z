#include <stdio.h>

int main() {

    int X;
    scanf("%d", &X);

    int sum=0, count=0;

    int Z;

    while(1) {

        scanf("%d", &Z);
        if(Z<=X) continue;
        else break;
    }

    while(1) {

        sum = sum + X++;
        count++;
        //printf("sum= %d, x= %d, count= %d\n", sum, X, count);

        if(sum>Z) break;
        }

    //printf("final sum= %d,final x= %d,final count= %d", sum, X, count);
    printf("%d\n", count);

    return 0;
}
