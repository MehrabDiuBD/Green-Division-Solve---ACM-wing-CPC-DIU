#include <stdio.h>

int main() {

    int N, plus=0;

    while(scanf("%d", &N) !=EOF) {
        
    plus++;
    int count1=1;
    count1+= (N*(N+1))/2;

    if(N==0) printf("Caso %d: %d numero\n", plus, count1);
    else if(N>=0) printf("Caso %d: %d numeros\n", plus, count1);

    if(N>=0) printf("0");

    for(int i=1; i<=N; i++) {

        for(int j=1; j<=i; j++) {

            printf(" %d", i);
        }
    }

    printf("\n\n");

    }

    return 0;
}
